<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contentIndexView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@android:style/Theme.NoTitleBar"
    tools:context="jp.co.atschool.quiz.FinishActivity"
    tools:layout_editor_absoluteY="81dp">

    <Button
        android:id="@+id/startButton2"
        android:layout_width="85dp"
        android:layout_height="40dp"
        android:layout_marginEnd="149dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="42dp"
        android:background="#AFF"
        android:text="@string/topback"
        android:textColor="#333"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/result1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="53dp"
        android:text="今回は..."
        android:textColor="#888"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/result2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginTop="164dp"
        android:text="問 正解!"
        android:textAlignment="center"
        android:textColor="#888"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/contentIndexView2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/contentIndexView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="66dp"
        android:layout_marginTop="44dp"
        android:text="0"
        android:textColor="#888"
        android:textSize="50sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result1" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="270dp"
        android:layout_height="155dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="24dp"
        android:scaleType="fitXY"
        android:src="@mipmap/hukidasi_p"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result2" />

    <TextView
        android:id="@+id/resultView"
        android:layout_width="191dp"
        android:layout_height="87dp"
        android:layout_marginStart="137dp"
        android:layout_marginTop="80dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#888"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result2" />

</android.support.constraint.ConstraintLayout>
